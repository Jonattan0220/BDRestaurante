@model IEnumerable<Restaurante.Models.Mesero>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de meseros</h1>

<p>
    <a asp-action="Create">Registrar un nuevo mesero</a>
</p>
<p>
    <a asp-action="Ventas">Total (suma) vendido por cada mesero</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeseroId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antiguedad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeseroId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antiguedad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MeseroId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MeseroId">Ver detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.MeseroId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
